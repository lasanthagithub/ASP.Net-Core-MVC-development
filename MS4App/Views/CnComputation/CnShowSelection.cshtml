@{
    Layout = "_CnComputationLayout";
}

@{
    ViewData["Title"] = "ShowSelection";
}


<form method="POST" asp-controller="CnComputation" >
    <div class="col-md-7">
        <!--<h3>Runoff Curve Number (CN) Computation Table</h3>
        <h4>SCS Method</h4>-->
        <h4>Select the Preference to display the selections</h4>
    </div>



    <div class="col-md-3">
        <br />
        <div>
            @if (ViewBag.CnSelection1 == "Selection 1")
            {
                @*<a asp-action="ViewEditCnSelection" asp-controller="CnComputation" class="btn btn-primary" style="height:35px; width:150px">Preference 1</a>*@
                <input asp-action="ViewEditCnSelection1" type="submit" class="btn btn-primary" name="showSelect" value="Selection 1" style="height:35px; width:150px">
            }
            else
            {
                <a href="#" class="btn btn-primary" style="height:35px; width:150px" disabled>Preference 1</a>
            }
        </div>

        <br />
        <div>
            @if (ViewBag.CnSelection2 == "Selection 2")
            {
                @*<a asp-action="ViewEditCnSelection" asp-controller="CnComputation" class="btn btn-primary" style="height:35px; width:150px">Preference 2</a>*@
                <input asp-action="ViewEditCnSelection2" type="submit" class="btn btn-primary" name="showSelect" value="Selection 2" style="height:35px; width:150px">
            }
            else
            {
                <a href="#" class="btn btn-primary" style="height:35px; width:150px" disabled>Preference 2</a>
            }

        </div>
        <br />
        <div>
            @if (ViewBag.CnSelection3 == "Selection 3")
            {
                @*<a asp-action="ViewEditCnSelection" asp-controller="CnComputation" class="btn btn-primary" style="height:35px; width:150px">Preference 1</a>*@
                <input asp-action="ViewEditCnSelection3" type="submit" class="btn btn-primary" name="showSelect" value="Selection 3" style="height:35px; width:150px">
            }
            else
            {
                <a href="#" class="btn btn-primary" style="height:35px; width:150px" disabled>Preference 3</a>
            }

        </div>
        <br />

        <div>

                <a asp-action="CnComputationViewEdit" asp-controller="CnComputation" class="btn btn-primary" style="height:35px; width:150px">Show / Edit CN items</a>

        </div>
        <br />
    </div>
</form>


