@model Icollection

@if(ViewBag.CnSelection == "Selection 1")
{
    var modelSelection = Model.Sel1CnItemsList;

}
else if (ViewBag.CnSelection == "Selection 2")
{
    var modelSelection = Model.Sel2CnItemsList;
}
else if (ViewBag.CnSelection == "Selection 3")
{
    var modelSelection = Model.Sel2CnItemsList;
}


<form asp-controller="CnComputation" asp-action="CnComputationViewEdit" method="post">
    <div class="col-md-9">

        <h3>Select prefered criteria</h3>

        @await Html.PartialAsync("_CnSuccessOrError")
        <table class="table table.striped">
            <thead>
                <tr>
                    <th rowspan="2"></th>
                    <th rowspan="4">
                        @*@Html.DisplayNameFor(model=>model.CnItemDescription)    *@ CN Item Description
                    </th>
                </tr>

            </thead>
            <tbody>

                @for (int i = 0; i < modelSelection.Count; i++)
                {
                    var item = Model.Sel1CnItemsList[i];
                    <tr>
                        <td>
                            <input type="checkbox" name="cnItemsSelected" value="@Html.DisplayFor(modelItem=>item.CnItemId)" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CnItemDescription)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-3">
        <br />
        <div>
            <input type="submit" class="btn btn-primary" name="cnSelect" value="Save pref. 1..." style="height:35px; width:150px">
        </div>
        <br />
        <div>
            <input type="submit" class="btn btn-primary" name="cnSelect" value="Save pref. 2..." style="height:35px; width:150px">
        </div>
        <br />
        <div>
            <input type="submit" class="btn btn-primary" name="cnSelect" value="Save pref. 3..." style="height:35px; width:150px">
        </div>
        <br />
        <div>
            <a asp-action="ViewEditCnSelection" asp-controller="CnComputation" class="btn btn-primary" style="height:35px; width:150px">View / Edit prefs...</a>
        </div>


    </div>
</form>
